{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "installer",
  "description": "Permissions for downloads, filesystem and running installers",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "http:default",
      "allow": [
        "https://*",
        "http://*",
        { "url": "https://*:*" },
        { "url": "http://*:*" }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "powershell", "cmd": "powershell" }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        "$APPCONFIG/*",
        "$APPDATA/*",
        "$APPLOCALDATA/*",
        "C:/*"
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        "$APPCONFIG/*",
        "$APPDATA/*",
        "$APPLOCALDATA/*",
        "C:/*"
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        "$APPCONFIG/*",
        "$APPDATA/*",
        "$APPLOCALDATA/*",
        "$HOME/*",
        "$DESKTOP/*",
        "$DOCUMENT/*",
        "$DOWNLOAD/*",
        "C:/*",
        "D:/*",
        "E:/*"
      ]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [
        "$APPCONFIG/*",
        "$APPDATA/*",
        "$APPLOCALDATA/*",
        "$HOME/*",
        "$DESKTOP/*",
        "$DOCUMENT/*",
        "$DOWNLOAD/*",
        "C:/*",
        "D:/*",
        "E:/*"
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        "$APPCONFIG/*",
        "$APPDATA/*",
        "$APPLOCALDATA/*",
        "$HOME/*",
        "$DESKTOP/*",
        "$DOCUMENT/*",
        "$DOWNLOAD/*",
        "C:/*",
        "D:/*",
        "E:/*"
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        "$APPCONFIG/*",
        "$APPDATA/*",
        "$APPLOCALDATA/*",
        "$HOME/*",
        "$DESKTOP/*",
        "$DOCUMENT/*",
        "$DOWNLOAD/*",
        "C:/*",
        "D:/*",
        "E:/*"
      ]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [
        "$APPCONFIG/*",
        "$APPDATA/*",
        "$APPLOCALDATA/*",
        "$HOME/*",
        "$DESKTOP/*",
        "$DOCUMENT/*",
        "$DOWNLOAD/*",
        "C:/*",
        "D:/*",
        "E:/*"
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        "$APPCONFIG/*",
        "$APPDATA/*",
        "$APPLOCALDATA/*",
        "$HOME/*",
        "$DESKTOP/*",
        "$DOCUMENT/*",
        "$DOWNLOAD/*",
        "C:/*",
        "D:/*",
        "E:/*"
      ]
    }
  ]
}

