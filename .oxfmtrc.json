{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",

  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",

  "ignorePatterns": ["archive/**", "dist/**", "node_modules/**", "target/**"]
}
